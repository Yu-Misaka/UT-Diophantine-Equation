\defbeamertemplate*{title page}{customized}[1][]{
\begin{tikzpicture}[remember picture, overlay]
	
	\node[at=(current page.east), anchor=east, inner sep=0] {\includegraphics[height=\paperheight, keepaspectratio]{\TitleImagePath}};
    
   	\node[at=(current page.east), anchor=east, inner sep=0] {\includegraphics[height=\paperheight, width=0.5\paperwidth]{\TitleImagePathCover}};
    
    \node[at=(current page.west), anchor=west, inner sep=0] {\includegraphics[height=\paperheight, width=0.5\paperwidth]{\TitleImagePathBlock}};
    
    \node[anchor=west, inner sep=0] at ($(current page.east)-(0.23\paperheight,0.35\paperheight)$) {\includegraphics[height=0.17\paperheight, keepaspectratio]{\LogoPath}};

	\node[fill=white, rectangle, minimum width=.6\paperwidth, minimum height=.4\paperheight, anchor=center, text width=.55\paperwidth, font=\sffamily] at ($(current page.center)+(0,0.06\paperheight)$) {
		\usebeamerfont{title}\textcolor{mainColor}\inserttitle\\
		\vspace{0.1cm}
		\tiny \textcolor{orange}{\rule{0.1\linewidth}{2pt}}\par
		\vspace{0.1cm}
		\usebeamerfont{author}\textcolor{subtleColor}\insertauthor\par
		\usebeamerfont{date}\textcolor{subtleColor}\insertdate
	};
	\end{tikzpicture}
}

